@model PrjPanifMVC.Models.TbCliente

@{
    ViewData["Title"] = "Deletar Cliente";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar isso?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nome")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("CPF/CNPJ")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CpfCnpj)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Celular")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefoneContatoCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Rua")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Bairro")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoBairro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Cidade")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("CEP")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("UF")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoUf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Complemento")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoComplemento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Retornar a Lista</a>
    </form>
</div>
