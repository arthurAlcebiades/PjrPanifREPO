@model IEnumerable<PrjPanifMVC.Models.TbMotoristum>

@{
    ViewData["Title"] = "Motoristas";
}

<h1>Lista de Motoristas</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nome")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeMotorista)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdMotorista" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdMotorista" class="btn btn-primary">Resumo</a> |
                <a asp-action="Delete" asp-route-id="@item.IdMotorista" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
