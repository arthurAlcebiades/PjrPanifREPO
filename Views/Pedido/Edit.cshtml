@model PrjPanifMVC.Models.TbPedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<h1>Editar Pedido</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPedido" />
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Código do Cliente</label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRota" class="control-label">Código da Rota</label>
                <select asp-for="IdRota" class="form-control" asp-items="ViewBag.IdRota"></select>
                <span asp-validation-for="IdRota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacoes" class="control-label">Observações</label>
                <input asp-for="Observacoes" class="form-control" />
                <span asp-validation-for="Observacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicioRecorrencia" class="control-label">Data de Início da Recorrência</label>
                <input asp-for="DataInicioRecorrencia" class="form-control" />
                <span asp-validation-for="DataInicioRecorrencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFinalRecorrencia" class="control-label">Data Final da Recorrência</label>
                <input asp-for="DataFinalRecorrencia" class="form-control" />
                <span asp-validation-for="DataFinalRecorrencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Data Pedido</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> | 
                <a asp-action="Index" class="btn-primary">Retornar a Lista</a>
            </div>
        </form>
    </div>
</div>

