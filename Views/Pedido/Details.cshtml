@model PrjPanifMVC.Models.TbPedido

@{
    ViewData["Title"] = "Resumo";
}

<h1>Resumo Pedido</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Id")
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayName("Observações")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Data Inicio Recorrência")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicioRecorrencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Data Final Recorrência")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFinalRecorrencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Data")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Id Navegação Cliente")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.IdCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Id Rota")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRotaNavigation.IdRota)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdPedido" class="btn-primary">Editar</a> |
    <a asp-action="Index" class="btn-primary">Retornar a Lista</a>
</div>
