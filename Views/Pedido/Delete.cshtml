@model PrjPanifMVC.Models.TbPedido

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar Pedido</h1>

<h3>Tem certeza que deseja deletar este pedido?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Id")
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayName("Observações")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Data Inicio Recorrência")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicioRecorrencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Data Final Recorrência")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFinalRecorrencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Data")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Id Navegação Cliente")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.IdCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Id Rota")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRotaNavigation.IdRota)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdPedido" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Retornar a Lista</a>
    </form>
</div>
