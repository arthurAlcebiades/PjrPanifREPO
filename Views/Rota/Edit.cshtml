@model PrjPanifMVC.Models.TbRotum

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRota" />
            <div class="form-group">
                <label asp-for="IdMotorista" class="control-label">Código Motorista</label>
                <select asp-for="IdMotorista" class="form-control" asp-items="ViewBag.IdMotorista"></select>
                <span asp-validation-for="IdMotorista" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label">Perído da Rota</label>
                <input asp-for="Periodo" class="form-control" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar a Lista</a>
</div>

