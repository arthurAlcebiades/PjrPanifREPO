@model PrjPanifMVC.Models.TbProduto

@{
    ViewData["Title"] = "Deletar Produto";
}

<h1>Deletar</h1>

<h3>Você tem certeza que deseja deletar este produto?</h3>
<div>
    <h4>TbProduto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nome")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Unidade")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProduto" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Retornar a Lista</a>
    </form>
</div>
