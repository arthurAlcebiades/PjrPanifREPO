@model PrjPanifMVC.Models.TbProduto

@{
    ViewData["Title"] = "Resumo";
}

<h1>Resumo</h1>

<div>
    <h4>TbProduto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nome")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Unidade")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Unidade)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdProduto" class="btn btn-primary">Editar</a> |
    <a asp-action="Index"class="btn btn-primary">Retornar Para a Lista</a>
</div>
